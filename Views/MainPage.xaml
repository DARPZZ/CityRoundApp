<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Vamdrup_rundt.ViewModels"
             x:Class="Vamdrup_rundt.Views.MainPage"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:DataType="vm:MainViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" HorizontalOptions="Center">
            <Label Text="Welcome" FontSize="Large"/>
            <maps:Map x:Name="MapView"
              IsShowingUser="true"
              MapType="Street"/>
            
        </StackLayout>

        <Button Grid.Row="2" Margin="0,0,0,50" HeightRequest="60" WidthRequest="250" Text="Start trip" HorizontalOptions="Center"/>
    </Grid>
</ContentPage>
