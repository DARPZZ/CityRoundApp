<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Vamdrup_rundt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Vamdrup_rundt.Views"
    xmlns:local="clr-namespace:Vamdrup_rundt">

    <!-- Global ToolbarItem -->
 
    <!-- Bottom Tab Bar -->
    <TabBar>
        <Tab Title="Home" Route="MainPage">
            <ShellContent
                Icon="settings.png"
                ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>

        <Tab Title="Progress" Route="ProgressPage">
            <ShellContent
                Icon="iconblank.png"
                ContentTemplate="{DataTemplate views:ProgressPage}" />
        </Tab>

        <Tab Title="Blank3" Route="Blank3Page">
            <ShellContent
                Icon="iconblank.png"
                ContentTemplate="{DataTemplate views:Blank3Page}" />
        </Tab>

        <Tab Title="Settings" Route="SettingsPage">
            <ShellContent
                Icon="settings.png"
                ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

    <ShellContent
        Route="SignupPage"
        ContentTemplate="{DataTemplate views:SignupPage}" 
        IsVisible="False"/>

    <ShellContent
        Route="LoginnPage"
        ContentTemplate="{DataTemplate views:LoginnPage}" 
        IsVisible="True"/>

</Shell>
